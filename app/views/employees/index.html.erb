<h2 class="float-start mt-4" style="margin-right: 10px;">Macei√≥ IN</h2>

<div class="float-end mt-4 me-3">
  <%= link_to(new_employee_path, class: 'btn btn-blue') do %>
    <i class="bi bi-plus-lg"></i> Criar um novo cadastro
  <% end %>
</div>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="table-header">Nome</th>
      <th class="table-header">Setor</th>
      <th class="table-header">E-mail</th>
      <th class="table-header">Criado por</th>
      <th class="table-header"></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.translated_department %></td>
        <td><%= employee.email %></td>
        <td><%= employee.user.email %></td>
        <td class="d-inline-flex w-100">
          <%= link_to('Editar', edit_employee_path(employee), class: 'btn btn-sm btn-orange') %>
          <%= button_to 'Excluir', employee_path(employee), class: 'btn btn-sm btn-red', method: :delete, data: { turbo_confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
