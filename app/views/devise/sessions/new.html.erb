<div class="login-container">
  <h2>Login</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label fw-bold" %>
      <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, t('devise.shared.password'), class: "form-label fw-bold" %>
      <%= f.password_field :password, class: "form-control", required: true %>

    </div>

    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: "form-check-label" %>
    </div>

    <%= f.submit "Entrar", class: "btn btn-login w-100" %>
  <% end %>

  <%= link_to "Criar conta", new_registration_path(resource_name), class: "link-secondary" %>
</div>
